<form action="/Paciente/new/" method="POST">
  <head>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  </head>
  <body>
  <br>


  <!--AÑADIR PACIENTE-->
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h4 class="center teal-text text-accent-4">Añadir Paciente</h4>
      </div>
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12 m6 l6">
            <input name="nombre1" id="first_name" type="text" class="validate" required="" aria-required="true">
            <label for="first_name">Primer Nombre</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="nombre2" id="first_name" type="text" class="validate" required="" aria-required="true">
            <label for="first_name">Segundo Nombre</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="apellido1" id="last_name" type="text" class="validate" required="" aria-required="true">
            <label for="last_name">Primer Apellido</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="apellido2" id="last_name" type="text" class="validate" required="" aria-required="true">
            <label for="last_name">Segundo Apellido</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="cedula" id= "cedula" type="number" class="validate" required="" aria-required="true">
            <label for="cedula">Cédula</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="medico" id= "medico" type="hidden" value="<%= medico.id %>" required="" aria-required="true">
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="email" id="email" type="email" class="validate" required="" aria-required="true">
            <label for="email">Correo Electrónico</label>
          </div>
          <div class="input-field col s12 m6 l6" style="height: 50px" >
            <input name="fecha_nac" id="bday" type="text" class="datepicker" placeholder="Fecha de Nacimiento">
          </div>
          <div class="input-field col s12 m6 l6">
            <select name="sexo" id="genero" >
              <option value="" disabled selected>Seleccionar genero</option>
              <option value="M">Masculino</option>
              <option value="F">Femenino</option>
            </select>
            <label>Genero</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <select name="TipoSangre" id="nacionalidad">
              <option value="" disabled selected>Seleccionar tipo de sangre</option>
              <option value="A+">A+</option>
              <option value="A-">A-</option>
              <option value="B+">B+</option>
              <option value="B-">B-</option>
              <option value="AB+">AB+</option>
              <option value="AB-">AB-</option>
              <option value="O+">O+</option>
              <option value="O-">O-</option>
            </select>
            <label>Tipo de sangre</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <select name="estado" id="estado" >
              <option value="" disabled selected>Seleccionar estado</option>
              <option value="Amazonas">Amazonas</option>
              <option value="Anzoategui">Anzoátegui</option>
              <option value="Apure">Apure</option>
              <option value="Aragua">Aragua</option>
              <option value="Barinas">Barinas</option>
              <option value="Bolivar">Bolívar</option>
              <option value="Carabobo">Carabobo</option>
              <option value="Cojedes">Cojedes</option>
              <option value="Delta Amacuro">Delta Amacuro</option>
              <option value="Distrito Capital">Distrito Capital</option>
              <option value="Falcon">Falcón</option>
              <option value="Miranda">Miranda</option>
              <option value="Lara">Lara</option>
            </select>
            <label>Estado</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input name="direccion" id="direccion" type="text" class="validate" required="" aria-required="true">
            <label for="direccion">Dirección</label>
          </div>
        </div>
        <center>
          <input class="btn waves-effect waves-light teal accent-4" type="submit" name="action" value="Enviar"></input>
        </center>
      </form>
    </div>
  </div>
  <!--FIN-->
<br><br><br><br>


  <script src="/js/dependencies/sails.io.js"></script>
  <script src="/js/init.js"></script>
  <script src="/js/materialize.js"></script>
    <!--SCRIPTS END-->
  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

  <script>
    $(document).ready(function() {
      $('select').material_select();

      $('.datepicker').pickadate({
        selectMonths: true, // Creates a dropdown to control month
        selectYears: 200, // Creates a dropdown of 15 years to control year,
        today: 'Hoy',
        clear: 'Limpiar',
        close: 'Listo',
        closeOnSelect: false // Close upon selecting a date,
      });
    });
  </script>
  <script type="text/javascript">
    var Paciente;
    function registrarPaciente(){
      Paciente = {
        name: document.getElementById("first_name").value,
        apellido: document.getElementById("last_name").value,
        cedula: document.getElementById("cedula").value,
        correo: document.getElementById("email").value,
        bday: document.getElementById("bday").value,
        nacionalidad: document.getElementById("nacionalidad").value,
        nivelEducativo: document.getElementById("nivelEducativo").value,
        genero: document.getElementById("genero").value,
        edoCivil: document.getElementById("edoCivil").value,
        estado: document.getElementById("estado").value,
        direccion: document.getElementById("direccion").value,
      };
      console.log("Datos en obj Paciente.");
      //Querys aqui palante ToDo...
    }

  </script>
    <!--SCRIPTS-->





  </body>
  </html>
</form>
