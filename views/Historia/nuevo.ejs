<form action="/Historia/new" method="POST">
  <head>


    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">


  </head>
  <body>

  <br>



  <div class="container">

    <div class="row">
      <form class="col s12">
        <div class="row">

          <div class="col s12 m12 l12">
            <h4 class="flow-text center teal-text text-accent-4">Crear Historia</h4>
          </div>

          <div class="input-field col s12 m6 l6">
            <input name="peso" id="icon_telephone" type="tel" class="validate">
            <label for="icon_telephone">Peso</label>
          </div>

          <div class="input-field col s12 m6 l6">
            <input name="estatura" id="icon_telephone" type="tel" class="validate">
            <label for="icon_telephone">Estatura</label>
          </div>

          <div class="col s12 m12 l12">
            <h5 class="flow-text center teal-text text-accent-4">Condiciones del paciente</h5>
          </div>
          <p class="col s12 m3 l3 left-align">
            <input type="checkbox" id="intervenido" name="intervenido"/>
            <label for="intervenido">Fue intervenido</label>
          </p>

          <p class="col s12 m3 l3 left-align">
            <input type="checkbox" id="diabetico" name="diabetico"/>
            <label for="diabetico">Es diabético</label>
          </p>

          <p class="col s12 m3 l3 left-align">
            <input type="checkbox" id="hipertenso" name="hipertenso"/>
            <label for="hipertenso">Es hipertenso</label>
          </p>

          <p class="col s12 m3 l3 left-align">
            <input type="checkbox" id="fumador" name="fumador"/>
            <label for="fumador">Es fumador</label>
          </p>
          <div class="input-field col s12 m6 l6">
            <input name="fechaHist" type="text" class="datepicker">
            <label for="icon_telephone">Fecha</label>
          </div>

          <div class="input-field col s12 m6 l6">
            <input name="diagnostico" type="text" class="materialize-textarea">
            <label for="icon_telephone">Diagnóstico</label>
          </div>

          <div class="input-field col s12 m6 l6">
            <textarea name="sintoma" id="textarea1" class="materialize-textarea" data-length="120"></textarea>
            <label for="textarea1">Sintomas</label>
          </div>

          <div class="input-field col s12 m6 l6">
            <textarea name="notas" id="textarea1" class="materialize-textarea" data-length="120"></textarea>
            <label for="textarea1">Notas</label>
          </div>

          <div class="input-field col s12 m6 l6">
            <input name="medico" type="hidden" value="<%= medico.id %>" class="materialize-textarea">
          </div>

          <div class="input-field col s12 m6 l6">
            <input name="paciente" type="hidden" value="<%= paciente.id %>" class="materialize-textarea">
          </div>

          <center>
            <input class="btn waves-effect waves-light" type="submit" name="action" value="Enviar"></input>
          </center>

        </div>
      </form>
    </div>
  </div>


  <br><br>

  <script src="/js/dependencies/sails.io.js"></script>
  <script src="/js/init.js"></script>
  <script src="/js/materialize.js"></script>
  <!--SCRIPTS END-->
  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>



  </body>
  </html>
</form>
